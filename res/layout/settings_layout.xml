<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@color/color_common_backgroud">
    
    <TextView 
		    android:gravity="center"
		    android:textSize="26sp"
		    android:text="@string/connect_with"
			android:layout_width="fill_parent" 
			android:layout_height="90dp"
			android:layout_marginBottom="3dp"
		/>
    
     <LinearLayout
	    	android:layout_width="fill_parent"
	   	 	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	   		android:gravity="center_horizontal"
    		android:layout_gravity="center_horizontal">
	    <LinearLayout
	    	android:layout_width="90dp"
	   	 	android:layout_height="90dp"
	    	android:orientation="vertical" 
	   		android:gravity="center"
	   		android:padding="0dp"
	   		>
		    <ImageView 
		        android:contentDescription="@string/social_logo"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:src="@drawable/ic_facebook"
		        android:id="@+id/fb_icon"
		    />
		    <TextView
		       android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:textSize="14sp"
		       android:text="@string/log_w_fb" 
		    />
		</LinearLayout>
		<LinearLayout
	    	android:layout_width="90dp"
	   	 	android:layout_height="90dp"
	    	android:orientation="vertical" 
	   		android:gravity="center"
	   		android:padding="0dp">
		    <ImageView 
		        android:contentDescription="@string/social_logo"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:src="@drawable/ic_gplus"
		        android:id="@+id/gplus_icon"
		    />
		    <TextView
		       android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:textSize="14sp"
		       android:text="@string/log_w_gplus" 
		    />
	    
	 	</LinearLayout>
	 </LinearLayout>
	 
       
       <LinearLayout
   		android:layout_width="fill_parent"
  	 	android:layout_height="wrap_content"
   		android:orientation="horizontal" 
  		android:gravity="center_horizontal"
    	android:layout_gravity="center_horizontal">
     <LinearLayout
	    	android:layout_width="90dp"
	   	 	android:layout_height="90dp"
	    	android:orientation="vertical" 
	   		android:gravity="center_horizontal"
	   		android:padding="0dp">   
         
		    <ImageView 
		        android:contentDescription="@string/social_logo"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:src="@drawable/ic_foursquare"
		        android:id="@+id/fsq_icon"
		    />
		    <TextView
		       android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:textSize="14sp"
		       android:text="@string/log_w_4sq" 
		    />
    </LinearLayout>
    <LinearLayout
	    	android:layout_width="90dp"
	   	 	android:layout_height="90dp"
	    	android:orientation="vertical" 
	   		android:gravity="center_horizontal"
	   		android:padding="0dp">
    
		    <ImageView 
		        android:contentDescription="@string/social_logo"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:src="@drawable/ic_twitter"
		        android:id="@+id/tw_icon"
		    />
		    <TextView
		       android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:textSize="14sp"
		       android:text="@string/log_w_twitter" 
		    />
	</LinearLayout>
	</LinearLayout>
</LinearLayout>